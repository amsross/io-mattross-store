if product
	.product.product--large
		.col-xs-12.col-md-5.image
			img.img-responsive(src='http://placehold.it/500&text=' + product.name)
		.col-xs-12.col-md-7.info(id='product_' + product._id)
			.col-xs-12
				h2(contenteditable, data-name='product[name]')= product.name
			.col-xs-12.col-md-6.row
				.col-xs-5. Price
				.col-xs-7
					span.pull-left $
					div(contenteditable, data-name='product[price]')= product.price
			.col-xs-12.col-md-6.row
				.col-xs-5. Brand:
				.col-xs-7
					div(contenteditable, data-name='product[brand]')= product.brand
			.col-xs-12.col-md-6.row
				.col-xs-5. SKU:
				.col-xs-7
					div(contenteditable, data-name='product[sku]')= product.sku
			.col-xs-12.col-md-6.row
				.col-xs-5. Stock:
				.col-xs-7
					div(contenteditable, data-name='product[stock]')= product.stock
			.col-xs-12.col-md-6.row
				.col-xs-5. Rating:
				.col-xs-7
					div(contenteditable, data-name='product[rating]')= xxx
			.col-xs-12.col-md-6.row
				.col-xs-5. Shippable:
				.col-xs-7
					div(contenteditable, data-name='product[shipping]')= product.shipping
			.col-xs-12.col-md-6.row
				.col-xs-5. Quantity:
				.col-xs-7
					div(contenteditable, data-name='product[quantity]')= product.quantity
			.col-xs-12.col-md-6.row
				.col-xs-12
					a(href='javascript:;') Write a Review

			form.col-sm-12.row(method='POST', action='/products/' + (product.slug || ''), data-source='#product_' + product._id)
				input(type='hidden', name='product[name]', value=product.name)
				input(type='hidden', name='product[price]', value=product.price)
				.col-sm-4
					button.btn.btn-block.btn-danger(name='_method', value='DELETE') delete
				.col-sm-4
					if product.isNew
						button.btn.btn-block.btn-info(name='_method', value='POST') create
					else
						button.btn.btn-block.btn-info(name='_method', value='PUT') update
				.col-sm-4
						a.btn.btn-block.btn-primary(href='/cart/add/' + product._id) add to cart
