- var is_admin = true
if category
	.category.category--large
		form.contenteditable.col-sm-12(method='POST', action='/categories/' + (category.slug || ''), data-source='#category_' + category._id)
			.row
				input(type='hidden', name='category[name]', value=category.name)
				.col-xs-12.col-md-5.image
					img.thumbnail.img-responsive(src='http://placehold.it/500&text=' + category.name)
				.col-xs-12.col-md-7.info(id='category_' + category._id)
					.row
						.col-xs-12
							h2(contenteditable=is_admin, data-name='category[name]')= category.name
						.col-xs-12
							.row
								if products
									each product in products
										label.col-sm-6
											if (_.pluck(category.products, 'slug').indexOf(product.slug) !== -1)
												input(type='checkbox', name='category[products][]', value=product._id, checked)
											else
												input(type='checkbox', name='category[products][]', value=product._id)
											small  
												= product.name
						.col-xs-12
							.row
								label.col-sm-6
									input(type='checkbox', name='category[isTopLevel]', value='true', checked=category.isTopLevel)
									small  Top Level
						.col-xs-12
							.row
								.col-sm-6
									button.btn.btn-block.btn-danger(name='_method', value='DELETE') delete
								.col-sm-6
									if category.isNew
										button.btn.btn-block.btn-info(name='_method', value='POST') create
									else
										button.btn.btn-block.btn-info(name='_method', value='PUT') update
		.col-sm-12
			.row
				if category.products
					each product in category.products
						.col-xs-12.col-sm-6.col-md-3
							include ../products/single_small
