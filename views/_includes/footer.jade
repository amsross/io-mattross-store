			.col-xs-12.col-sm-6.col-md-3
				h4 Tools
				ul.list-unstyled
					li
						a(href='javascript:;') My Account
					li
						a(href='/cart') Shopping Cart
					if is_admin
						li
							a(href='/admin/off') Hide Admin
