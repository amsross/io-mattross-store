footer.row
	.col-xs-12.col-md-8
		.row
			.col-xs-12.col-sm-6.col-md-3
				h4 Categories
				ul.list-unstyled
					if site_parts && site_parts.top_categories
						each category in site_parts.top_categories
							li
								a(href='/categories/' + category.slug)
									= category.name
				h4 Featured Products
				ul.list-unstyled
					if site_parts && site_parts.top_products
						each product in site_parts.top_products
							li
								a(href='/products/' + product.slug)
									= product.name
			.col-xs-12.col-sm-6.col-md-3
				h4 On The Web
				ul.list-unstyled
					li
						a(href='javascript:;') leberkas
					li
						a(href='javascript:;') Venison hamburger
					li
						a(href='javascript:;') jerky pork
					li
						a(href='javascript:;') Flank beef
					li
						a(href='javascript:;') jerky strip
					li
						a(href='javascript:;') biltong turkey
					li
						a(href='javascript:;') kevin turducken
					li
						a(href='javascript:;') short loin
					li
						a(href='javascript:;') Boudin fatback
			.col-xs-12.col-sm-6.col-md-3
				h4 Info
				ul.list-unstyled
					li
						a(href='javascript:;') hamburger chicken
					li
						a(href='javascript:;') chop drumstick
					li
						a(href='javascript:;') pastrami spare
